{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": 2,
    "indent": [2, 2],
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "strict": [2, "global"]
    // "init-declarations": [2, "always"]
  }
}